<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pinControls="clr-namespace:Turbina.Editors.PinControls"
    mc:Ignorable="d">

    <Style TargetType="{x:Type pinControls:TextBoxPinControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type pinControls:TextBoxPinControl}">
                    <TextBox Margin="0,5"
                             Foreground="White"
                             CaretBrush="White"
                             SelectionBrush="White"
                             MaxWidth="500"
                             MaxHeight="300"
                             MinWidth="30"
                             HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Auto"
                             Background="#776495ed"
                             BorderThickness="0"
                             AcceptsReturn="True"
                             Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
